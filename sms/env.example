# Analytics Module Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB connection string for Atlas or local MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pluto_money?retryWrites=true&w=majority
MONGODB_DB=pluto_money

# Alternative for local MongoDB
# MONGODB_URI=mongodb://localhost:27017/pluto_money

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Groq API Configuration (Primary AI Provider)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Gemini API Configuration (Fallback AI Provider)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# In-house AI Configuration (Emergency Fallback)
INHOUSE_API_KEY=your_inhouse_api_key_here
INHOUSE_API_URL=http://localhost:5000/v1/chat/completions

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Streamlit server configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# CHAT API CONFIGURATION
# =============================================================================
# Chat API server configuration
CHAT_API_HOST=0.0.0.0
CHAT_API_PORT=8001

# Chat API rate limiting
CHAT_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis cache configuration
REDIS_URL=redis://localhost:6379/0

# Cache TTL settings
CACHE_TTL_SUBQUERIES=1800  # 30 minutes
CACHE_TTL_PIPELINES=7200   # 2 hours
CACHE_TTL_INSIGHTS=3600    # 1 hour

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Default analysis period (months)
DEFAULT_ANALYSIS_PERIOD=6

# Maximum transactions to analyze
MAX_TRANSACTIONS_LIMIT=10000

# Enable advanced analytics features
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_PSYCHOLOGICAL_PROFILING=true
ENABLE_RISK_ASSESSMENT=true

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================
# Chart color scheme
CHART_COLOR_SCHEME=plotly

# Default chart theme
CHART_THEME=plotly_white

# Enable interactive charts
ENABLE_INTERACTIVE_CHARTS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool size
DB_POOL_SIZE=20

# Maximum concurrent AI requests
MAX_CONCURRENT_AI_REQUESTS=5

# AI request timeout (seconds)
AI_REQUEST_TIMEOUT=30

# Database query timeout (seconds)
DB_QUERY_TIMEOUT=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens
SECRET_KEY=your-secret-key-here-change-in-production

# Enable CORS
ENABLE_CORS=true

# Allowed origins for CORS
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log format
LOG_FORMAT=json

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable metrics collection
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode
DEBUG=false

# Enable debug features
ENABLE_DEBUG_FEATURES=false

# Auto-reload on code changes
AUTO_RELOAD=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable enhanced insights system
ENABLE_ENHANCED_INSIGHTS=true

# Enable smart data orchestrator
ENABLE_SMART_ORCHESTRATOR=true

# Enable pattern recognition
ENABLE_PATTERN_RECOGNITION=true

# Enable machine learning features
ENABLE_ML_FEATURES=true

# Enable real-time processing
ENABLE_REALTIME_PROCESSING=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Webhook URL for analytics completion
ANALYTICS_WEBHOOK_URL=https://your-app.com/webhook/analytics-completed

# External data sources
EXTERNAL_DATA_API_URL=https://api.external-data.com
EXTERNAL_DATA_API_KEY=your-external-data-api-key

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# File storage path
FILE_STORAGE_PATH=./storage

# Maximum file size (MB)
MAX_FILE_SIZE=50

# Enable file compression
ENABLE_FILE_COMPRESSION=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database URI
TEST_MONGODB_URI=mongodb://localhost:27017/test_pluto_money

# Test mode flag
TEST_MODE=false

# Mock AI providers in tests
MOCK_AI_PROVIDERS=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Custom model configurations
CUSTOM_MODEL_CONFIG_PATH=./config/custom_models.json

# Advanced analytics settings
ADVANCED_ANALYTICS_CONFIG_PATH=./config/advanced_analytics.json

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Service discovery
SERVICE_DISCOVERY_URL=http://consul:8500

# Load balancer configuration
LOAD_BALANCER_URL=http://nginx:80

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR compliance
ENABLE_GDPR_COMPLIANCE=true

# Data retention period (days)
DATA_RETENTION_PERIOD=2555  # 7 years

# Enable data anonymization
ENABLE_DATA_ANONYMIZATION=false
