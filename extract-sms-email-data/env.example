# SMS Processing Module Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB connection string for Atlas or local MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pluto_money?retryWrites=true&w=majority
MONGODB_DB=pluto_money

# Alternative for local MongoDB
# MONGODB_URI=mongodb://localhost:27017/pluto_money

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Logging configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# LLM API CONFIGURATION (Optional)
# =============================================================================
# LLM API URL for transaction parsing (optional - system works without it)
API_URL=https://api.groq.com/v1/chat/completions
API_KEY=your_groq_api_key_here

# Alternative LLM providers
# API_URL=https://api.openai.com/v1/chat/completions
# API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Batch size for processing SMS data
BATCH_SIZE=10

# Model to use for LLM processing (if API_URL is configured)
MODEL=qwen3:8b
# Alternative models: gpt-3.5-turbo, gpt-4, gemini-1.5-flash, llama3-8b-8192

# Create database indexes automatically
CREATE_INDEXES=true

# Skip date conversion (for BSON format)
SKIP_DATE_CONVERSION=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (production only)
SECRET_KEY=your-secret-key-here-change-in-production

# API rate limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Enable metrics collection
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode (enables debug features)
DEBUG=false

# Auto-reload on code changes (development only)
AUTO_RELOAD=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis cache (optional)
REDIS_URL=redis://localhost:6379/0

# Cache TTL (seconds)
CACHE_TTL=3600

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local file storage path
FILE_STORAGE_PATH=./storage

# Maximum file size (MB)
MAX_FILE_SIZE=10

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Database connection pool size
DB_POOL_SIZE=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable advanced analytics
ENABLE_ADVANCED_ANALYTICS=true

# Enable real-time processing
ENABLE_REALTIME_PROCESSING=true

# Enable user management
ENABLE_USER_MANAGEMENT=true

# Enable financial filtering
ENABLE_FINANCIAL_FILTERING=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Webhook URL for processing completion notifications
WEBHOOK_URL=https://your-app.com/webhook/sms-processed

# External API endpoints
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your-external-api-key

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database URI (for running tests)
TEST_MONGODB_URI=mongodb://localhost:27017/test_pluto_money

# Test mode flag
TEST_MODE=false

# Mock external APIs in tests
MOCK_EXTERNAL_APIS=true
