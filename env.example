# Root Environment Configuration for Docker Compose
# Copy this file to .env and update with your actual values

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB root credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password-here

# MongoDB database name
MONGODB_DB=pluto_money

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Groq API Key (Primary AI Provider)
GROQ_API_KEY=your_groq_api_key_here

# Gemini API Key (Fallback AI Provider)
GEMINI_API_KEY=your_gemini_api_key_here

# In-house AI Configuration (Optional)
INHOUSE_API_KEY=your_inhouse_api_key_here
INHOUSE_API_URL=http://localhost:5000/v1/chat/completions

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker registry credentials
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Docker image tags
SMS_PROCESSING_TAG=latest
SMS_ANALYTICS_TAG=latest
SMS_CHAT_TAG=latest

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# External ports
SMS_PROCESSING_PORT=8000
ANALYTICS_DASHBOARD_PORT=8501
CHAT_API_PORT=8001
MONGODB_PORT=27017
REDIS_PORT=6379
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# API Keys for external services
EXTERNAL_API_KEY=your-external-api-key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable monitoring
ENABLE_MONITORING=true

# Prometheus configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level
LOG_LEVEL=INFO

# Log retention (days)
LOG_RETENTION_DAYS=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable backups
ENABLE_BACKUPS=true

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Enable SSL
ENABLE_SSL=false

# SSL certificate path
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode
DEBUG=false

# Enable hot reload
ENABLE_HOT_RELOAD=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Resource limits
CPU_LIMIT=2
MEMORY_LIMIT=4g

# Scaling configuration
MIN_REPLICAS=1
MAX_REPLICAS=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable advanced features
ENABLE_ADVANCED_FEATURES=true

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# External API endpoints
EXTERNAL_API_BASE_URL=https://api.external-service.com

# Webhook URLs
WEBHOOK_URL=https://your-app.com/webhook
ANALYTICS_WEBHOOK_URL=https://your-app.com/webhook/analytics

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR compliance
ENABLE_GDPR_COMPLIANCE=true

# Data retention (days)
DATA_RETENTION_DAYS=2555

# Enable data anonymization
ENABLE_DATA_ANONYMIZATION=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test mode
TEST_MODE=false

# Test database
TEST_MONGODB_URI=mongodb://localhost:27017/test_pluto_money

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment
ENVIRONMENT=development

# Deployment region
DEPLOYMENT_REGION=us-east-1

# Service discovery
SERVICE_DISCOVERY_URL=http://consul:8500
